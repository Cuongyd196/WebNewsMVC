@model IEnumerable<WebNewsMVC.Models.Categorys>

@{
    ViewBag.Title = "IndexSearch";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>IndexSearch</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("IndexSearch", "Categorys", FormMethod.Get)) // -- phần thêm mới Form tìm kiếm
{
    <p>
        Từ khoá: @Html.TextBox("searchString")  <input type="submit" value="Tìm kiếm" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Category_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Category_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Category_ID })
            </td>
        </tr>
    }

</table>
